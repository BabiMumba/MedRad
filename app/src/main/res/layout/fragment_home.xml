<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    tools:context=".Activity.AddApointActivity">

    <androidx.cardview.widget.CardView
        android:padding="@dimen/_10sdp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_20sdp"
        >
        <LinearLayout

            android:background="@color/card_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/card_background"
                android:id="@+id/relativeprofil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageprofil"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/black"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    />
                <LinearLayout
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imageprofil"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/nomprofil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Babi Mumba"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/prenomprofil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comment vas tu ?"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/card_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Trouver un docteur ou un hopital"
                    android:background="@drawable/arroundir_edit"
                    android:padding="@dimen/_8sdp"
                    android:textColorHint="@color/secondary_text"
                    android:drawableStart="@drawable/baseline_search_24"
                    android:drawablePadding="@dimen/_10sdp"
                    />



            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/material"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_2sdp"
                >
                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:iss_auto_cycle="true"
                    app:iss_delay="2000"
                    app:iss_period="5000"
                    />
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout

                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:text="CatÃ©gories"
                    android:layout_marginStart="@dimen/_10sdp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    android:text="Trouver un specialiste par domaine"
                    android:layout_marginStart="@dimen/_10sdp"
                    />
                <HorizontalScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">
                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@color/card_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include
                            layout="@layout/specialitse_item"
                            />
                        <include
                            layout="@layout/specialitse_item"
                            />
                        <include
                            layout="@layout/specialitse_item"
                            />
                        <include
                            layout="@layout/specialitse_item"
                            />




                    </LinearLayout>


                </HorizontalScrollView>


            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_5sdp"
                android:layout_margin="@dimen/_10sdp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fond"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>


            <RelativeLayout

                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Docteur"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    />
                <TextView
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voir plus"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    />

            </RelativeLayout>
            <HorizontalScrollView
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <include
                    layout="@layout/doctor_item"
                    />
                <include
                    layout="@layout/doctor_item"
                    />
                <include
                    layout="@layout/doctor_item"
                    />
                <include
                    layout="@layout/doctor_item"
                    />
                <include
                    layout="@layout/doctor_item"
                    />
                <include
                    layout="@layout/doctor_item"
                    />
            </LinearLayout>
        </HorizontalScrollView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_5sdp"
                android:layout_margin="@dimen/_10sdp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fond"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>
            <RelativeLayout

                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Votre region\nLubumbashi"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    />
                <TextView
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voir plus"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    />

            </RelativeLayout>
            <include
                layout="@layout/doctor_consul"
                />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</RelativeLayout>